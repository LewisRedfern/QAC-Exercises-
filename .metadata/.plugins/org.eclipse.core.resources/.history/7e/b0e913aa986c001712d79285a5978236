package Factorals;

public class FactoralRunner {

	
//	3628800 = 10!
//	479001600 =12!
//	6 = 3!
//	18 = NONEâ€‹
	public FactoralRunner() {
		
		start();
		
		
	}

	public void start() {
		
		System.out.println("Hello World!");
		
		
		System.out.println(Factorial(18) == -1 ? "NONE" : Factorial(18) + "!");
	}
	
	public int Factorial(int n){
		
		int result = n; 
		int i = 2;
		
		do {
			result = result / i;
			
			
			if (result == 1) {
								
				//System.out.println(i + "!");
				return i;
			}
			i++;
		}while (result > 1); 
		return (-1);
	}
}
