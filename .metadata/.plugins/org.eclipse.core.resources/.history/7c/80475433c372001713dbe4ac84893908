package offlineWork;

public class Task3 {

//
//evenlySpaced(2, 4, 6) → true
//evenlySpaced(4, 6, 2) → true
//evenlySpaced(4, 6, 3) → false

	public void run() {
		
		Spacing(2, 4, 6);
		Spacing(4, 6, 2);
		Spacing(4, 6, 3);


	}
	
	public boolean Spacing (int a, int b, int c) {
		
		int first = a - b;
		int second = b - c;
		boolean yes = first == second;
		
		if (yes) {
			
			System.out.println(yes);
			
		}
		
		else if (!yes) {
			
			System.out.println(yes);
		}
		
		return yes;
	}
}
