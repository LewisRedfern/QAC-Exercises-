package Intermediate;
import java.util.*; 

public class Garage {

	private static double price;
	private static HashMap<Integer, Vehicle> garageList = new HashMap<Integer, Vehicle>();   
	private static int id = 0;  
	
	public static void main(String[] args) {
		
		Car c1 = new Car (5, 5, "Honda", 168.5, 3, true);
		Motorcycle m1 = new Motorcycle (2, 1, "Yamaha", 201.0, 1000, false);
		Boat b1 = new Boat (7, 10, "Speedster", 50.5, 3, true);
				
		garageList.put(id++, c1);
		garageList.put(id++, m1);
		garageList.put(id++, b1);

		for (Vehicle v : garageList.values()) {
			
			System.out.println(v.strMaker());
		}
	}//end of main
	
	public static double calcPrice(double price) {
		
		for (Vehicle loop : garageList.values()) {
			if (loop.getClass().getName() == "Car") {
				
				System.out.println("Cars cost £30");
			}
			
			else if (loop.getClass().getName() == "Motorcycle") {
				
				System.out.println("Motorcycles cost £20");
			}
			
			else if (loop.getClass().getName() == "Boat") {
				
				System.out.println("Boats cost £100");
			}
			
		}
	}
	
	
}
