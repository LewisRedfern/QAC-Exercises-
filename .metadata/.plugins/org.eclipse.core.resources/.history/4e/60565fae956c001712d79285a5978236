package Factorals;

public class FactoralRunner {

	
//	3628800
//	479001600
//	6
//	18â€‹
	public FactoralRunner() {
		
		start();
		
		
	}

	public void start() {
		
		System.out.println("Hello World!");
		
		
		System.out.println(Factorial(120));
	}
	
	public int Factorial(int n){
		
		int result = n; 
		int i = 2;
		
		do {
			result = result / i;
			
			
			if (result == 1) {
								
				System.out.println(i + "!");
				return i;
			}
			i++;
		}while (result > 1); 
		return (-1);
	}
}
