package Intermediate;

import java.util.ArrayList;

public class ObjectOrient {

	private static ArrayList<String> personArray = new ArrayList<String>();
	
	public static void main (String[] args) {
		
		Person p1 = new Person("Lewis", 21, "Consultant");
		Person p2 = new Person("Martine", 39, "Teacher");
		Person p3 = new Person("Em", 20, "Nurse");
		Person p4 = new Person("George", 21, "Salesman");
		
		System.out.println(p1.strMaker());
		System.out.println(p2.strMaker());
		System.out.println(p3.strMaker());
		System.out.println(p4.strMaker());
		
		arraySet(p1);
		arraySet(p2);
		arraySet(p3);
		arraySet(p4);
		
		for (String p : personArray) {
			
			System.out.println(p);
		}
	}	
	
	public static void arraySet(Person p) {
		
		personArray.add(p.strMaker());
	}
}
